<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignRight="@+id/mountain_icon"
        android:layout_below="@+id/textView_za_hory"
        android:layout_marginTop="15dp"
        android:background="@color/ic_line"
        android:paddingTop="20dp" />

    <View
        android:id="@+id/line3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/line2"
        android:layout_below="@+id/line2"
        android:background="@color/ic_line"
        android:paddingTop="40dp" />

    <ListView
        android:id="@+id/listviewperso"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/line3" >

    </ListView>

    <ImageView
        android:id="@+id/mountain_icon"
        android:layout_width="112dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView_za_hory"
        android:layout_marginRight="46dp"
        android:adjustViewBounds="false"
        android:clickable="true"
        android:contentDescription="@string/hello_world"
        android:scaleType="fitCenter"
        android:soundEffectsEnabled="false"
        android:src="@drawable/za" />

    <TextView
        android:id="@+id/textView_za_hory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mountain_icon"
        android:layout_alignLeft="@+id/listviewperso"
        android:text="@string/zilinsky"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

</RelativeLayout>